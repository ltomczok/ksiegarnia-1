</head>
<body class="<%= controller.controller_name %>">
    <div id="banner">
      <%= @page_title || "Nasza księgarnia" %>
    </div>
    <div id="columns">
      <div id="side">
        <ul>
          <li><%= link_to 'Strona główna', store_path %></li>
          <li><%= link_to 'link 2', '#' %></li>
          <li><%= link_to 'link 3', '#' %></li>
          <li><%= link_to 'link 4', '#' %></li>
        </ul>
<div id="cart">
<%= render 'carts/cart' %>
</div>
      </div>
      <div id="main">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
